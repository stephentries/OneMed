<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1e4e62"
    android:padding="0dp">

    <!-- No Appointments Text -->
    <TextView
        android:id="@+id/tvDoctorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/there_are_no_upcoming_appointments_yet"
        android:textColor="#ff7f0d"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/no_appt_instruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Book a new appointment below."
        android:textColor="#fffef6"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvDoctorName"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Book Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/book_new_appt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#ff7f0d"
        android:text="@string/book_a_new_appointment"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_appt_instruction" />

</androidx.constraintlayout.widget.ConstraintLayout>
