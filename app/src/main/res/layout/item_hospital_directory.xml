<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hospital_card"
    android:layout_width="160dp"
    android:layout_height="180dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#fff7d6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center_horizontal">

        <!-- hospital Image -->
        <ImageView
            android:id="@+id/hospitalImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="12dp"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:adjustViewBounds="true"
            android:contentDescription="doctor image"
            android:src="@drawable/thomson" />

        <!-- Hospital Name -->
        <TextView
            android:id="@+id/HospitalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hospital name"
            android:textColor="#354954"
            android:textStyle="bold"
            
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"

            android:ellipsize="none"
            android:maxLines="3"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:breakStrategy="simple"
            android:layout_marginBottom="4dp" />

        <!-- rating bar -->

        <RatingBar
            android:id="@+id/hospital_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            style="@style/Widget.AppCompat.RatingBar.Small"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>
