<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_appt_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#1e4e62">

    <!-- Outer ConstraintLayout wrapping both inner layouts -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- MAIN LAYOUT -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Doctor Image -->
            <ImageView
                android:id="@+id/doc_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/thomson" />

            <!-- Doctor Name -->
            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Dr. John Doe"
                android:textColor="#fffef6"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/doc_image"
                app:layout_constraintTop_toTopOf="@id/doc_image"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Specialty -->
            <TextView
                android:id="@+id/Doc_specialty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cardiology"
                android:textColor="#fffef6"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvDoctorName"
                app:layout_constraintStart_toStartOf="@id/tvDoctorName"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Date and Time -->
            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="August 2, 2025 at 10:00 AM"
                android:textColor="#fffef6"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/Doc_specialty"
                app:layout_constraintStart_toStartOf="@id/Doc_specialty"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Hospital Info Preview -->
            <TextView
                android:id="@+id/hospital_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Thomson Hospital\nKota Damansara"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#fffef6"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvDateTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Book Again Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/reschedule2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Book Again"
                android:textSize="12sp"
                android:backgroundTint="#7d2c49"
                app:cornerRadius="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/hospital_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Toggle Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/RateReview_toggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rate and Review"
                android:textSize="12sp"
                android:backgroundTint="#7d2c49"
                app:cornerRadius="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/reschedule2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <!-- TOGGLED Rate and Review container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/review_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            app:layout_constraintTop_toBottomOf="@id/main_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!--Rating Bar-->
            <RatingBar
                android:id="@+id/rate_appt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#fffef6"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.465"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reviewInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Write a review here..."
                android:textColor="#000000"
                app:boxBackgroundMode="outline"
                app:boxStrokeWidth="2dp"
                app:boxBackgroundColor="#f1f1e6"
                app:boxStrokeColor="@color/text_input_box_stroke_color"
                app:endIconMode="clear_text"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/rate_appt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/review_input"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:minLines="4"
                    android:maxLines="6"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:padding="0dp"
                    android:textSize="14sp"
                    />
            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_send_review"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#7d2c49"
                android:text="Send Rating and review"
                android:textSize="12sp"
                app:cornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/reviewInputLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <!-- Call Hospital Button -->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
