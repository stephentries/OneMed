<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Top decorative layer -->

    <View
        android:id="@+id/top_layer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/top_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- profile picture-->
    <ImageView
        android:contentDescription="@string/profile_picture"
        android:layout_width="48dp"
        android:id="@+id/profile_pic"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/circle_red"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- greeting text -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/top_layer_hello"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/top_layer"
        app:layout_constraintBottom_toBottomOf="@id/top_layer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.228" />

<!-- main layout-->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/cardScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/top_layer"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">


            <!-- Card 1: Upcoming Appointment -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1e4e62"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

        <!-- Appointment Title -->
        <TextView
            android:id="@+id/tvAppointmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:drawablePadding="5dp"
            android:text="@string/upcoming_appointment"
            android:textColor="#ffaf0d"
            android:textSize="18sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/appointment_soon_symbolic_svgrepo_com"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/AppointmentRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:paddingBottom="0dp"
                android:clipToPadding="true"/>

            <FrameLayout
                android:id="@+id/noAppointmentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"/>


            <LinearLayout
                android:id="@+id/dotsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"/>


        </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Card 2: Current Prescription -->
            <androidx.cardview.widget.CardView
                android:id="@+id/current_prescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#1e4e62"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvPrescriptionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:drawablePadding="5dp"
                        android:text="@string/current_prescription"
                        android:textColor="#ffaf0d"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/prescription_bottle_medical_svgrepo_com" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/prescriptionRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                    />

                    <!-- container to hold no prescription xml-->
                    <FrameLayout
                        android:id="@+id/noPrescriptionContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/dotsContainer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Hospital list Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/Hospital_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#1e4e62"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">



                    <TextView
                        android:id="@+id/hospital_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:drawablePadding="5dp"
                        android:text="@string/hospital_list"
                        android:textColor="#ffaf0d"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/hospital_svgrepo_com" />


                    <!-- Medical Records Icon -->
                    <!--<LinearLayout
                        android:id="@+id/btn_medical_records"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/btn_search_hospital"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/essential_title">

                        <ImageButton
                            android:id="@+id/medical_records"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/medical_records"
                            android:scaleType="centerInside"
                            android:src="@drawable/medical_record_medical_hospital_pharmacy_healthcare_svgrepo_com" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="@string/medical_records"
                            android:textColor="#fffef6"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout> -->




                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hospitalRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="none" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- bottom nav-->
    <View
        android:id="@+id/bottomNavBackground"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bottom_nav_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contentDescription="@string/settings"
        android:focusable="true"
        android:padding="9dp"
        android:scaleType="fitCenter"
        android:src="@drawable/settings_svgrepo_com1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/circleBackground"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:src="@drawable/circle_bottom_nav"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

         />

    <!-- Book appointment button on top of circle -->

    <ImageButton
        android:id="@+id/bookAppointment"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/book_appt"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/book_appointment"
        app:layout_constraintTop_toTopOf="@id/circleBackground"
        app:layout_constraintBottom_toBottomOf="@id/circleBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/home_btn"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.986"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/onemed_logo_yellow" />

    <ImageButton
        android:id="@+id/history_btn"
        android:contentDescription="@string/history"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.986"
        app:srcCompat="@drawable/history_svgrepo_com" />

    <TextView
        android:fontFamily="sans-serif-medium"
        android:id="@+id/home_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/home_btn"
        android:textColor="#ffaf0d"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:fontFamily="sans-serif-medium"
        android:id="@+id/book_appt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/book_appt"
        android:textColor="#fffef6"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:fontFamily="sans-serif-medium"
        android:id="@+id/history_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fffef6"
        android:background="@android:color/transparent"
        android:text="@string/history"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
